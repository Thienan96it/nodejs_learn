<div class="mt-4">
  <h2>Create Course</h2>
  <form method="POST" action="/courses/store">
    <div class="form-group mt-3">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" required />
    </div>
    <div class="form-group mt-3">
      <label for="description">Description</label>
      <input
        type="text"
        class="form-control"
        id="description"
        name="description"
        required
      />
    </div>
    <div class="form-group mt-3">
      <label for="videoId">Video ID</label>
      <input
        type="text"
        class="form-control"
        id="videoId"
        name="videoId"
        required
      />
    </div>
    <div class="form-group mt-3">
      <label for="level">Level</label>
      <input
        type="text"
        class="form-control"
        id="level"
        name="level"
        required
      />
    </div>
    <button type="submit" class="btn btn-primary mt-4">Add course</button>
  </form>
</div>