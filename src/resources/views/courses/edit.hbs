<div class="mt-4">
  <h2>Edit Course</h2>
  <form method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group mt-3">
      <label for="name">Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        value="{{course.name}}"
        required
      />
    </div>
    <div class="form-group mt-3">
      <label for="description">Description</label>
      <textarea
        type="text"
        class="form-control"
        id="description"
        name="description"
        required
      >{{course.description}}</textarea>
    </div>
    <div class="form-group mt-3">
      <label for="videoId">Video ID</label>
      <input
        type="text"
        class="form-control"
        id="videoId"
        name="videoId"
        value="{{course.videoId}}"
        required
      />
    </div>
    <div class="form-group mt-3">
      <label for="level">Level</label>
      <input
        type="text"
        class="form-control"
        id="level"
        name="level"
        value="{{course.level}}"
        required
      />
    </div>
    <button type="submit" class="btn btn-primary mt-4">Apply change</button>
  </form>
</div>